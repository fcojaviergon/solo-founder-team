{
  "name": "solo-founder-permissions",
  "version": "1.1.1",
  "description": "Pragmatic permission set for solo founder development. Allows common dev operations, blocks destructive commands. Part of the Solo Founder SDLC Kit.",
  "author": "fcojaviergon",
  "license": "MIT",
  "tags": ["sdlc", "settings", "permissions", "solo-founder", "security"],
  "config": {
    "permissions": {
      "allow": [
        "Read",
        "Glob",
        "Grep",
        "Bash(npx @biomejs/biome *)",
        "Bash(npm run build*)",
        "Bash(npm run dev*)",
        "Bash(npm run test*)",
        "Bash(npm run lint*)",
        "Bash(npx tsc --noEmit*)",
        "Bash(git status*)",
        "Bash(git diff*)",
        "Bash(git log*)",
        "Bash(git add*)",
        "Bash(git commit*)",
        "Bash(git push*)",
        "Bash(git checkout*)",
        "Bash(git branch*)",
        "Bash(cat *)",
        "Bash(ls *)",
        "Bash(find *)",
        "Bash(wc *)",
        "Bash(head *)",
        "Bash(tail *)",
        "Bash(mkdir *)",
        "Bash(cp *)"
      ],
      "deny": [
        "Bash(rm -rf *)",
        "Bash(sudo *)",
        "Bash(chmod 777*)",
        "Bash(curl * | bash)",
        "Bash(wget * | bash)"
      ]
    }
  }
}
